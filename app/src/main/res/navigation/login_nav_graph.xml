<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_nav_graph.xml"
    app:startDestination="@id/registerFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.nuhlp.nursehelper.ui.login.LoginFragment"
        android:label="LoginFragment"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.nuhlp.nursehelper.ui.login.RegisterFragment"
        android:label="fragment_regist"
        tools:layout="@layout/fragment_regist" >
        <action
            android:id="@+id/action_registerFragment_to_register2Fragment"
            app:destination="@id/register2Fragment" />
        <action
            android:id="@+id/action_registerFragment_to_registerTermDetailFragment"
            app:destination="@id/registerTermDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/register2Fragment"
        android:name="com.nuhlp.nursehelper.ui.login.RegisterIdFragment"
        android:label="fragment_register2"
        tools:layout="@layout/fragment_register2" />
    <fragment
        android:id="@+id/registerTermDetailFragment"
        android:name="com.nuhlp.nursehelper.ui.login.RegisterTermDetailFragment"
        android:label="fragment_register_term_detail"
        tools:layout="@layout/fragment_register_term_detail" >
        <argument
            android:name="term"
            app:argType="com.nuhlp.nursehelper.ui.login.Term" />
    </fragment>
</navigation>