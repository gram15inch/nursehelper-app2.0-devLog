<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryColorBack"
    tools:context=".ui.login.RegisterTermDetailFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="150dp"
        android:background="@color/white"
        android:elevation="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:orientation="vertical"
            android:padding="@dimen/side_margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/regist_section_logo"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/logo_image_width"
                    android:layout_height="@dimen/logo_image_height"

                    android:layout_gravity="top|left"
                    android:layout_marginTop="@dimen/margin_between_elements"
                    android:importantForAccessibility="no"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/ic_banner_foreground" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/regist_section_contents_stateless"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/marginX_element_login_container"
                android:layout_marginEnd="@dimen/marginX_element_login_container">

                <TextView
                    android:id="@+id/term_title_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/welcome_regist_size" />

                <ScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/term_detail_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/agree_terms_checkbox_label_essential_detail"
                        android:textSize="@dimen/term_detail_tex_size" />
                </ScrollView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_back_regist"
                    style="@style/registContainerElements"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/btn_height"
                    android:text="@string/back_btn"
                    android:textColor="@color/black"
                    android:textSize="@dimen/btn_size"
                    app:elevation="@dimen/btn_elevation" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</FrameLayout>