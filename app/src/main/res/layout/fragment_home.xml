<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.nuhlp.nursehelper.ui.home.HomeViewModel" />
    </data>



    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.home.HomeFragment">

        <TextView
            android:id="@+id/textViewLive"
            style="@style/fragmentText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#88EAE1"
            android:text="Home"

            app:listToText="@{viewModel.docLive}"

            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp" />

        <Button
            android:id="@+id/button"
            android:layout_width="305dp"
            android:layout_height="76dp"
            android:layout_marginEnd="244dp"
            android:layout_marginBottom="324dp"
            android:onClick="@{()-> viewModel.btnClick()}"
            android:textSize="24sp"

            app:layout_constraintBottom_toBottomOf="@+id/textViewLive"
            app:layout_constraintEnd_toEndOf="parent" />

        <EditText
            android:id="@+id/editTextTextPersonName"
            android:layout_width="301dp"
            android:layout_height="90dp"
            android:layout_marginBottom="24dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:textSize="34sp"

            app:layout_constraintBottom_toTopOf="@+id/button"
            app:layout_constraintStart_toStartOf="@+id/button" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>