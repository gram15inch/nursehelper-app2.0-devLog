<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.nuhlp.nursehelper.ui.home.HomeViewModel" />

    </data>



    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.home.HomeFragment">

        <com.nuhlp.nursehelper.utill.component.IndexRecyclerView
            android:id="@+id/index_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="72dp"
            android:background="#FFD6D6"
            android:elevation="3dp"
            android:overScrollMode="never"
            android:paddingStart="60dp"
            android:paddingTop="60dp"
            android:paddingEnd="13dp"
            android:paddingBottom="5dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="24dp" />

        <TextView
            android:id="@+id/textViewLive"
            style="@style/fragmentText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#88EAE1"
            android:text="Home"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp" />

        <Button
            android:id="@+id/button"
            android:layout_width="305dp"
            android:layout_height="76dp"
            android:layout_marginEnd="244dp"
            android:layout_marginBottom="324dp"
            android:onClick="@{()-> viewModel.btnClick()}"
            android:textSize="24sp"

            app:layout_constraintBottom_toBottomOf="@+id/textViewLive"
            app:layout_constraintEnd_toEndOf="parent" />

        <EditText
            android:id="@+id/editTextTextPersonName"
            android:layout_width="301dp"
            android:layout_height="90dp"
            android:layout_marginBottom="24dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:textSize="34sp"

            app:layout_constraintBottom_toTopOf="@+id/button"
            app:layout_constraintStart_toStartOf="@+id/button" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycleTest"
            android:layout_width="604dp"
            android:layout_height="323dp"
            android:layout_marginTop="300dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>